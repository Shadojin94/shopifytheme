{% render 'product-opinion' %}

{% comment %}
{% render 'product-elements-reinsurance' %}
{% render 'product-tabs-contain' %}
{% render 'product-customer-review-video' %}
{% endcomment %}


<!-- Judge.ME -->

<div class="container ab-testing-review">
    {% render 'judgeme_widgets', widget_type: 'judgeme_review_widget', concierge_install: false, product: product %}
</div>

<!-- Judge.ME -->

{% comment %}
{% render 'product-le-mode-demploi' %}
{% endcomment %}

<div class="container hide">
    {{ descriptionSplit[1] }}
</div>



{% if section.settings.show_reviews %}
<div class="product-page-reviews-section">
    <div id="shopify-product-reviews" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>
</div>
{% endif %}

{% unless product.empty? %}
<script type="application/json" id="ProductJson-{{ section.id }}">
{{ product | json }}
</script>
{% endunless %}

{% schema %}
{
"name": "Product pages",
"settings": [
{
"type": "checkbox",
"id": "show-vendor",
"label": "Show vendor",
"default": false
},
{
"type": "checkbox",
"id": "show_sku",
"label": "Show SKU",
"default": false
},
{
"type": "text",
"id": "variants_title",
"label": "Variants Title",
"default": "Économisez sur votre commande"
},
{
"type": "header",
"content": "Product images"
},
{
"type": "select",
"id": "image_size",
"label": "Image size",
"options": [
{
"value": "small",
"label": "Small"
},
{
"value": "medium",
"label": "Medium"
},
{
"value": "large",
"label": "Large"
}
],
"default": "medium"
},
{
"type": "select",
"id": "thumbnail_position",
"label": "Thumbnail position",
"options": [
{
"value": "below",
"label": "Below main image"
},
{
"value": "left",
"label": "Left of main image"
},
{
"value": "right",
"label": "Right of main image"
}
],
"default": "below"
},
{
"type": "checkbox",
"id": "enable_zoom",
"label": "Enable image zoom",
"default": true
},
{
"type": "header",
"content": "Related products"
},
{
"type": "checkbox",
"id": "enable_related_products",
"label": "Enable",
"default": true
},
{
"type": "text",
"id": "related_products_title",
"label": "Heading",
"default": "Other fine products"
},
{
"type": "header",
"content": "Reviews"
},
{
"type": "checkbox",
"id": "show_reviews",
"label": "Enable",
"default": true
},
{
"type": "paragraph",
"content": "You will need to install Shopify's [Product Reviews app](https://apps.shopify.com/product-reviews) before enabling this option."
},
{
"type": "header",
"content": "Reansurance"
},
{
"type": "checkbox",
"id": "reansurance-section",
"label": "Display ?",
"default": true
},
{
"type": "image_picker",
"id": "reansurance-photo",
"label": "Reansurance Photo"
},
{
"type": "text",
"id": "contact_title",
"label": "Contact title",
"default": "Des questions sur ce Produit ?"
},
{
"type": "text",
"id": "tel",
"label": "Telephone number",
"default": "+33000000000"
},
{
"type": "url",
"id": "contact_url",
"label": "Contact url"
},
{
"type": "text",
"id": "whatsapp",
"label": "Whatsapp link",
"default": "https://api.whatsapp.com/send?phone=33000000000"
}
]
}
{% endschema %}
